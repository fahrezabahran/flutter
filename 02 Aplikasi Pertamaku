import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}
// fungsi 'main' menjalankan fungsi 'runApp' yang memiliki parameter berupa class 'MyApp'

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: Text('Aplikasi Hello World'),),
        body: Center(child: Text('Hello World!')),
      ),
    );
  }
}
// class 'MyApp' memiliki fungsi 'build' yang me-return 'MaterialApp' dengan tipe 'Widget'
